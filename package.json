{
  "name": "ghosttime",
  "version": "1.0.0",
  "description": "Ghostty animation for your terminal with customizable colors",
  "module": "src/cli.ts",
  "type": "module",
  "bin": {
    "ghosttime": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "bun run build",
    "build": "bun build ./src/cli.ts --outdir=dist --target=node --minify",
    "start": "bun dist/cli.js",
    "dev": "bun run ./src/cli.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "ghostty",
    "ghosttime",
    "animation",
    "terminal",
    "cli"
  ],
